@model Movies.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Genre
        </dt>

        <dd>
             @Model.Genre.Name
        </dd>
        <dt>
            Release Date
        </dt>

        <dd>
            @Model.ReleaseDate.ToShortDateString()
        </dd>
        <dt>
            Date Added
        </dt>

        <dd>
            @Model.DateAdded.ToShortDateString()
        </dd>
        <dt>
            Number in Stock
        </dt>

        <dd>
            @Model.NumberInStock
        </dd>

    </dl>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.MovieID }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>
