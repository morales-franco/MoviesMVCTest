@model Movies.ViewModels.MovieCrudVM
@{
    ViewBag.Title = "Create";
}

<h2>Create Movie</h2>

@using (Html.BeginForm("Create", "Movies", FormMethod.Post))
{
    @Html.ValidationSummary(false)
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreID)
        @Html.DropDownListFor(m => m.GenreID, new SelectList(ViewBag.Genres, "GenreID", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>

}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}